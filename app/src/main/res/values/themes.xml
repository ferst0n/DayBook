<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DayBook" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:datePickerDialogTheme">@style/MyDatePickerDialogTheme</item>
        <item name="android:timePickerDialogTheme">@style/MyTimePickerDialogTheme</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">#546E7A</item>
        <!-- Customize your theme here. -->

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MyDatePickerDialogTheme" parent="android:Theme.Material.Light.Dialog">

        <item name="android:colorAccent">@color/light_orange</item>
        <item name="android:datePickerStyle">@style/MyDatePickerStyle</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/ButtonBarButtonStyle</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/ButtonBarButtonStyle</item>

    </style>

    <style name="MyTimePickerDialogTheme" parent="android:Theme.Material.Light.Dialog">

        <item name="android:colorAccent">@color/light_orange</item>
        <item name="android:timePickerStyle">@style/MyTimePickerStyle</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/ButtonBarButtonStyle</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/ButtonBarButtonStyle</item>
    </style>

    <style name="MyDatePickerStyle" parent="@android:style/Widget.Material.Light.DatePicker">

        <item name="android:headerBackground">@color/blue_gray_600</item>

    </style>

    <style name="MyTimePickerStyle" parent="@android:style/Widget.Material.Light.TimePicker">

        <item name="android:headerBackground">@color/blue_gray_600</item>

    </style>

    <style name="ButtonBarButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">

        <item name="android:textColor">@color/light_orange</item>

    </style>





</resources>